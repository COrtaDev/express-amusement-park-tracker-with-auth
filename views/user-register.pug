extends layout.pug
include utils.pug

block content
    +validationErrorSummary(errors)
    form(method='post' action='/user/register')
        input(type='hidden' name='_csrf' value=token)
        +field('First Name', 'firstName', user.firstName)
        +field('Last Name', 'lastName', user.lastName)
        +field('Email Address', 'emailAddress', user.emailAddress)
        +field('Password', 'password', user.password, 'password', 'password')
        +field('Confirm Password', 'confirmPassword', user.password, 'password', 'confirm password')
        button(type='submit') Submit
